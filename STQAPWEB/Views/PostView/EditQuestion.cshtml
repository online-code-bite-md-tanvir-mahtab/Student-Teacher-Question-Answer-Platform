@model STQAPWEB.Models.Entites.Question

<form method="post">
    <div class="border-b-2 block">
        <div class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">
            <div class="rounded  shadow p-6">
                <div class="pb-6">
                    <label for="id" class="font-semibold text-gray-700 block pb-1">Id</label>
                    <div class="flex">
                        <input disabled id="userid" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="QuestionId" />
                    </div>
                </div>
                <div class="pb-4">
                    <label for="about" class="font-semibold text-gray-700 block pb-1">Message</label>
                    <input id="name" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="QuestionText" />
                </div>
                <div class="pb-6">
                    <label for="email" class="font-semibold text-gray-700 block pb-1">StudentId</label>
                    <div class="flex">
                        <input id="studentId" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="StudentId" />
                    </div>
                </div>
                
               
                <div class="flex justify-between">
                    <span class="text-xl font-semibold block">Admin Profile</span>
                    <button type="submit" class="-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800">Update</button>
                </div>
            </div>
        </div>
    </div>

</form>