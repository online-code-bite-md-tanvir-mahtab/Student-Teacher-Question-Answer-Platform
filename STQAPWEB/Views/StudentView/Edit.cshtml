@model STQAPWEB.Models.Entites.User


    
    <form method="post">
        <div class="border-b-2 block">
        <div class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">
            <div class="rounded  shadow p-6">
                <div class="pb-6">
                    <label for="id" class="font-semibold text-gray-700 block pb-1">Id</label>
                    <div class="flex">
                        <input disabled id="userid" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="Id" />
                    </div>
                </div>
                <div class="pb-4">
                    <label for="about" class="font-semibold text-gray-700 block pb-1">Name</label>
                    <input  id="name" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="Name" />
                </div>
                <div class="pb-6">
                    <label for="email" class="font-semibold text-gray-700 block pb-1">Email</label>
                    <div class="flex">
                        <input  id="email" class="border-1  rounded-r px-4 py-2 w-full" type="email" asp-for="Email" />
                    </div>
                </div>
                <div class="pb-4">
                    <label for="name" class="font-semibold text-gray-700 block pb-1">Inistitute Name</label>
                    <input  id="name" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="InstitueName" />
                </div>
                <div class="pb-6">
                    <label for="name" class="font-semibold text-gray-700 block pb-1">Student Id</label>
                    <div class="flex">
                        <input  id="institueId" class="border-1  rounded-r px-4 py-2 w-full" type="text" asp-for="InstitueId" />
                    </div>
                </div>
                <div class="pb-4">
                    <label for="password" class="font-semibold text-gray-700 block pb-1">Password</label>
                    <input  id="password" class="border-1  rounded-r px-4 py-2 w-full" type="password" asp-for="Password" />
                    <span class="text-gray-600 pt-4 block opacity-70">Personal login information of your account</span>
                </div>
                <div class="mt-3">

                    <input type="checkbox" class="form-check-input" id="isStudent" asp-for="isStudent" />
                    <label class="form-label" for="isStudent">isStudent</label>
                </div>
                <div class="mt-3">

                    <input type="checkbox" class="form-check-input" id="isTeacher" asp-for="isTeacher" />
                    <label class="form-label" for="isTeacher">isTeacher</label>
                </div>

                <div class="mt-3">

                    <input type="checkbox" class="form-check-input" id="isModerator" asp-for="isModerator" />
                    <label class="form-label" for="isModerator">isModerator</label>
                </div>
                <div class="flex justify-between">
                    <span class="text-xl font-semibold block">Admin Profile</span>
                    <button type="submit" class="-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800" >Update</button>
                </div>
            </div>
        </div>
</div>
        
    </form>

